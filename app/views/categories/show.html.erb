<h2 class="text-center mt-4">Category: <%= @category.name %></h2>
<% if logged_in? && current_user.admin? %>
  <div class="text-center mt-4">
    <%= link_to 'Edit Category Name', edit_category_path(@category), class: "btn btn-outline-info" %>
  </div>
<% end %>

<h3 class="text-center mt-4">Articles</h3>
<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>
<%= render 'articles/article' %>

<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">


        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(@category.created_at) %> ago, 
          edited <%= time_ago_in_words(@category.updated_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
</div>